# Chat4All - Configurações de Ambiente
# Copie este arquivo para .env e ajuste conforme necessário

# ==========================================
# KAFKA CONFIGURATION
# ==========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_MESSAGES=messages-topic
KAFKA_TOPIC_NOTIFICATIONS=notifications-topic
KAFKA_GROUP_ID=chat4all-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest

# ==========================================
# CASSANDRA CONFIGURATION
# ==========================================
CASSANDRA_CONTACT_POINTS=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=chat4all
CASSANDRA_LOCAL_DC=datacenter1
CASSANDRA_REPLICATION_FACTOR=1

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_CHANNEL_NOTIFICATIONS=notifications

# ==========================================
# MINIO (S3) CONFIGURATION
# ==========================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=chat4all-files
MINIO_REGION=us-east-1

# ==========================================
# API SERVICE CONFIGURATION
# ==========================================
API_SERVICE_PORT=8080
API_SERVICE_HOST=0.0.0.0

# ==========================================
# WEBSOCKET GATEWAY CONFIGURATION
# ==========================================
WEBSOCKET_PORT=8085
WEBSOCKET_HOST=0.0.0.0

# ==========================================
# ROUTER WORKER CONFIGURATION
# ==========================================
ROUTER_WORKER_THREADS=4
ROUTER_WORKER_BATCH_SIZE=100

# ==========================================
# CONNECTOR WHATSAPP CONFIGURATION
# ==========================================
CONNECTOR_WHATSAPP_PORT=8081
CONNECTOR_WHATSAPP_PLATFORM=whatsapp

# ==========================================
# CONNECTOR INSTAGRAM CONFIGURATION
# ==========================================
CONNECTOR_INSTAGRAM_PORT=8082
CONNECTOR_INSTAGRAM_PLATFORM=instagram

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ==========================================
# DOCKER COMPOSE CONFIGURATION
# ==========================================
COMPOSE_PROJECT_NAME=chat4all
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ==========================================
# JAVA APPLICATION CONFIGURATION
# ==========================================
JAVA_OPTS=-Xmx512m -Xms256m
MAVEN_OPTS=-Xmx1024m -Xms512m

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# DEVELOPMENT/TESTING FLAGS
# ==========================================
ENABLE_DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
